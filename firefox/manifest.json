{
  "manifest_version": 2,
  "name": "Veyra Enhanced Extension",
  "version": "2.0",
  "description": "Advanced Veyra enhancement with intelligent PvP automation, energy farming, and comprehensive UI improvements",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://demonicscans.org/*",
    "*://demonicscans.org/*"
  ],
  "web_accessible_resources": [
    "alarm.mp3"
  ],
  "content_scripts": [
    {
      "matches": ["https://demonicscans.org/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
